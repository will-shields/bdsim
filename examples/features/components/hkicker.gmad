d1: drift, l=0.5;
hk1 : hkicker, l=0.5*m, angle = 0.01;
hk2 : hkicker, l=0.5*m, angle = 0.0;
d2: drift, l=0.5;

lat : line = (d1,hk1,d2,hk2);
com : line = (hk1);

use, period=lat;

include options.gmad;

! need 0,0 beam to test these properly

beam, particle="e-",
      energy=1.3*GeV,
      distrType="reference";

