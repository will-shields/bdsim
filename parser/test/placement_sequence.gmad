		  referenceElementNumber = 2,
		  s = -2*cm,
		  x = 20*cm,
		  y = 0*cm,
		  phi=1,theta=2,psi=3,
		  axisX=1, axisY=0.5, axisZ=0.01,angle=0.003,
		  sensitive=1,
