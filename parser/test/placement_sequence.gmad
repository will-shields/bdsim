d1: drift, l=1.3*m;
sb1: sbend, l=2.1*m, angle=0.8;
sb2: sbend, l=2.1*m, angle=-0.8;

l1: line=(d1,sb1,d1,sb2,d1,d1);
l2: line=(d1,d1,d1,sb1,d1,d1,sb1,d1);

use, l1;

